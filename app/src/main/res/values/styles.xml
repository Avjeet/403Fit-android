<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/zorba</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar.Style</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
    </style>

    <style name="Widget.AppTheme.Toolbar.Style" parent="Widget.AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="error_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error</item>
    </style>

</resources>
